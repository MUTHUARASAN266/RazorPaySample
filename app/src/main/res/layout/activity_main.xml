<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#3F51B5">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter The Amount To Transfer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText"
        style="@style/EditTextWithRoundedBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Amount"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#7A322121"
        app:layout_constraintEnd_toEndOf="@+id/textview_des"
        app:layout_constraintStart_toStartOf="@+id/textview_des"
        app:layout_constraintTop_toBottomOf="@+id/textview_des" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="pay"
        android:contentDescription="Buy Now"
        android:letterSpacing=".2"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
        app:backgroundTint="#D8FF5722"
        android:textColor="@color/black"
        app:elevation="20dp"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="@+id/textInputEditText"
        app:layout_constraintStart_toStartOf="@+id/textInputEditText"
        app:layout_constraintTop_toBottomOf="@+id/textInputEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>